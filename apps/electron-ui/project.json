{
  "name": "electron-ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "./",
  "projectType": "application",
  "implicitDependencies": ["whatnot-render-process"],
  "targets": {
    "build": {
      "dependsOn": ["^build"],
      "executor": "@nrwl/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/electron-ui",
        "main": "apps/electron-ui/src/main.ts",
        "tsConfig": "apps/electron-ui/tsconfig.app.json",
        "assets": [
          "apps/electron-ui/src/assets", 
          "tsconfig.base.json",
          {
            "input": "dist/libs/whatnot-render-process/src",
            "glob": "**/*.js",
            "output": "libs/whatnot-render-process/src"
          }
      ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/electron-ui/src/environments/environment.ts",
              "with": "apps/electron-ui/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx electron dist/apps/electron-ui/main.js"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/electron-ui/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/electron-ui/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
