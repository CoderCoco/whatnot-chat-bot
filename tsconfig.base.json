{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2017",
    "module": "es2022",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/application-events": ["libs/application-events/src/index.ts"],
      "@app/cli": ["libs/cli/src/index.ts"],
      "@app/core": ["libs/core/src/index.ts"],
      "@app/electron-react-bridge": ["libs/electron-react-bridge/src/index.ts"],
      "@app/logging": ["libs/logging/src/index.ts"],
      "@app/mixitup-interface": ["libs/mixitup-interface/src/index.ts"],
      "@app/whatnot-interface": ["libs/whatnot-interface/src/index.ts"],
      "@app/whatnot-render-process": [
        "libs/whatnot-render-process/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
